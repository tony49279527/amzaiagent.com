# Environment variables for Product Discovery Service

# OpenRouter API Key (REQUIRED)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# ScrapingBee API Key (REQUIRED for web scraping)
SCRAPINGBEE_API_KEY=your_scrapingbee_api_key_here

# RapidAPI Key (REQUIRED for Amazon data)
RAPIDAPI_KEY=your_rapidapi_key_here

# Google Custom Search API (REQUIRED for web source research)
GOOGLE_SEARCH_API_KEY=your_google_api_key_here
GOOGLE_SEARCH_CX=your_google_cx_here

# Email Settings (Optional - for sending reports)
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_gmail_app_password

# Supabase (Optional - for database)
SUPABASE_URL=your_supabase_url
SUPABASE_SERVICE_ROLE_KEY=your_supabase_key

# n8n Webhook URLs (REQUIRED for Pro payment and analysis flow)
N8N_CHECKOUT_WEBHOOK_URL=your_n8n_create_checkout_webhook_url
N8N_PRO_ANALYSIS_WEBHOOK_URL=your_n8n_pro_analysis_webhook_url
N8N_SEND_REPORT_WEBHOOK_URL=your_n8n_send_full_report_webhook_url
N8N_ALLOWED_HOSTS=your-n8n-instance.app

# Webhook signature verification
POLAR_WEBHOOK_SECRET=your_polar_webhook_secret

# CORS (comma-separated origins)
CORS_ALLOWED_ORIGINS=https://amzaiagent.com,https://www.amzaiagent.com
